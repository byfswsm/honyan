<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qcby.hongyansystemmanagement.mapper.PowerMapper">

    <delete id="delete">
        delete from power where pid = #{pid}
    </delete>

    <update id="update">
        update power set powername = (#{powername}) where pid = (#{pid})
    </update>
</mapper>
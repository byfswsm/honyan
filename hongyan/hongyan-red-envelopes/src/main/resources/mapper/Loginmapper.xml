<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qcby.hongyanredenvelopes.mapper.LoginMapper">

    <select id="login" resultType="com.qcby.hongyanredenvelopes.entity.User" parameterType="com.qcby.hongyanredenvelopes.entity.User">
        select * from user where username = #{user.username} and password = #{user.password}
    </select>
</mapper>